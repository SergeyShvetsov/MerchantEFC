@using WebUI.Resources
@inject LocalizationService Resource

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@Resource["SiteName"] - @Resource[ViewBag.Title]</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/ckeditor-full/4.14.1/content/Scripts/ckeditor/contents.css" />
    <link href="~/css/site.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="~/lib/ckeditor-full/4.14.1/content/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="row">
                <div class="col">
                    <a class="navbar-brand" href="/">
                        <img src="~/Images/greenleaf.png" class="no-border"/>
                    </a>
                </div>
            </div>
        </header>
        <div class="bg-light-green">&nbsp;</div>
        <div style="margin-top: 10px; margin-bottom: 10px;">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    @Html.ActionLink(Resource["Administration"], "Index", "Home", new { area = "Admin" }, new { @class = "nav-link" + (ViewBag.TabItem == "Home" ? " active" : "") })
                </li>
                <li class="nav-item">
                    @Html.ActionLink(Resource["Users"], "List", "Users", new { area = "Admin" }, new { @class = "nav-link" + (ViewBag.TabItem == "Users" ? " active" : "") })
                </li>
                <li class="nav-item">
                    @Html.ActionLink(Resource["Cities"], "List", "Cities", new { area = "Admin" }, new { @class = "nav-link" + (ViewBag.TabItem == "Cities" ? " active" : "") })
                </li>
                <li class="nav-item">
                    @Html.ActionLink(Resource["Stores"], "List", "Stores", new { area = "Admin" }, new { @class = "nav-link" + (ViewBag.TabItem == "Stores" ? " active" : "") })
                </li>
                <li class="nav-item">
                    @Html.ActionLink(Resource["Products"], "List", "Products", new { area = "Admin" }, new { @class = "nav-link" + (ViewBag.TabItem == "Products" ? " active" : "") })
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                </li>
            </ul>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @Resource["AppName"] - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
