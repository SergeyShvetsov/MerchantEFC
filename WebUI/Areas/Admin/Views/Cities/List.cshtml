@using X.PagedList.Mvc.Core
@using X.PagedList;
@using X.PagedList.Mvc.Bootstrap4.Core
@using WebUI.Resources
@inject LocalizationService resources
@model IEnumerable<WebUI.Areas.Admin.Models.CityListVM>

@{
    ViewData["Title"] = "CityList";
}

<div id="ModalDialog"></div>
@if (TempData["SM"] != null)
{

    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

<div class="row">
    <div class="col">
        <h4>@resources["CityList"]</h4>
    </div>
    <div class="col" style="text-align: right;">
        @Html.ActionLink(resources["CreateCity"], "CreateCity", "Cities", null, htmlAttributes: new { @class = "btn btn-outline-primary" })
    </div>
</div>

@if (!Model.Any())
{
    <h2 class="text-center">@resources["UserListIsEmpty"]</h2>
}
else
{<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name_ru)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name_uz_c)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name_uz_l)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" value="@item.Id" />
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name_ru)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name_uz_c)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name_uz_l)
                    </td>
                    <td>
                        @Html.ActionLink(resources["Edit"], "EditCity", "Cities", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-outline-primary" })
                        <button type="button" class="btn btn-outline-danger" data-toggle="ajax-modal"
                                data-target="#deleteCity" data-url="@Url.Action($"DeleteCity/{item.Id}")">
                            @resources["Delete"]
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("List", null), Bootstrap4PagedListRenderOptions.Default)
}
@section Scripts
{
    <script src="~/js/ModalDialog.js"></script>
}
