@model WebUI.Areas.Admin.Models.UserDeleteVM
@using WebUI.Resources
@inject LocalizationService resources

<div class="modal fade" id="deleteUser">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserLabel">@resources["DeleteUser"]</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="DeleteUser">
                    <input type="hidden" asp-for="UserId" class="form-control" />
                    <input type="hidden" asp-for="RoleId" class="form-control" />
                    <input name="IsValid" type="hidden" value="True" />
                </form>
                <p>@(string.Format(resources["DeleteUserConfirm"],Model.UserName))</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">@resources["Cancel"]</button>
                <button type="button" data-save="modal" class="btn btn-outline-danger">@resources["Delete"]</button>
            </div>
        </div>
    </div>
</div>