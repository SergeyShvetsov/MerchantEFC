@using X.PagedList.Mvc.Core
@using X.PagedList;
@using X.PagedList.Mvc.Bootstrap4.Core
@model IEnumerable<WebUI.Areas.Admin.Models.UserListVM>

@{
    ViewData["Title"] = "User List";
    ViewData["PageCode"] = "AdminUsersList";
}
        <h1>User List</h1>
    <div>Filtered By Role:&nbsp;</div>
    <div>
        <select id="SelectRole" name="SelectRole">
            <option value="@Guid.Empty">All</option>
            @foreach (var item in ViewBag.Roles)
            {
                if (ViewBag.SelectedRole == item.Value)
                {
                    <option selected="selected" value="@item.Value">@item.Text</option>
                }
                else
                {
                    <option value="@item.Value">@item.Text</option>
                }
            }
        </select>
    </div>
<hr />
@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
<p>
    @Html.ActionLink("Create User", "CreateUser", "Users", new { roleId = ViewBag.SelectedRole }, htmlAttributes: new { @class = "btn btn-primary" })
</p>
@if (!Model.Any())
{
    <h2 class="text-center">User List is empty.</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IsChecked)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" value="@item.UserId" />
                        <input asp-for="@item.IsChecked" value="@item.UserId" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", "Users", new { id = item.UserId }, htmlAttributes: new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "DeleteUser", "Users", new { id = item.UserId , roleId = ViewBag.SelectedRole }, htmlAttributes: new { @class = "btn btn-danger delete" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("List", new { page, roleId = ViewBag.SelectedRole }), Bootstrap4PagedListRenderOptions.Default)

}
@section Scripts
{
    <script src="~/js/UsersListView.js"></script>
}