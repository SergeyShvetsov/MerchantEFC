@model WebUI.Areas.Admin.Models.ProductPageDeleteVM
@using WebUI.Resources
@inject LocalizationService resources

<div class="modal fade" id="deleteProductPage">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="DeleteProductPage">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteProductPageLabel">@resources["DeleteProductPage"]</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input id="IsValid" name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <input type="hidden" asp-for="ProductId" class="form-control" />
                    <p>@resources["DeleteProductPageConfirm"]</p>
                    <p class="font-weight-bold">@Model.PageName</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">@resources["Cancel"]</button>
                    <button type="button" data-save="modal" class="btn btn-outline-danger">@resources["Delete"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}