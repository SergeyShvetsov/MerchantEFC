@model IEnumerable<Data.Model.Models.CatalogItem>

@{
    ViewData["Title"] = "Catalog";
}
<div class="row mt-5 mb-2">
    @for (var i = 0; i < 6; i++)
    {
        @foreach (var item in Model)
        {
            <div class="col-6 col-lg-4 col-xl-3 col-xxl-auto product-card mt-5 mb-2">
                <a href="" style="text-decoration: none;">
                    <img src="/Shop/ProductImage?id=@item.ProductId&s=@ImageSize.Medium">

                    <p>@item.Name</p>
                    <p>вариантов - @item.ModelCount</p>
                    <p>@(item.SalesPrice??item.Price)</p>
                </a>
            </div>
        }
    }
</div>
